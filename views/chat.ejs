<script>
let send = function(e) {
    e.preventDefault();
  
    // Get message text
    let msg = e.target.elements.msg.value;
  
    msg = marked.parse(msg);
    console.log(moment())
  
    if (!msg) {
      return false;
    }
  
    // Emit message to server
    socket.emit('chatMessage', msg);
  
    // Clear input
    e.target.elements.msg.value = '';
    e.target.elements.msg.focus();
    
}
let send_typing= function (_username){
  socket.emit('typing', {username:_username, room: room});
  document.getElementById("typing").innerHTML= _username+" is typing...";
setTimeout((function (){
  document.getElementById("typing").innerHTML= "";
}), 2000);
}
