    <div class="px-20 py-30 bg-green-100">
      <form class="flex" id="chat-form">
        <input
          class="text-base p-5 h-10 flex-1"
          id="msg"
          type="text"
          placeholder="Enter Message"
          required
          autocomplete="off"
        />
        <button class="cursor-pointer px-3 border-0 text-lg py-4">Send</button>
      </form>
    </div>
  </div>

